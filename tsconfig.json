{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "credentials/**/*.ts",
        "nodes/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}